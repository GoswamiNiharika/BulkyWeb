@model List<Category>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-opacity-75 bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="card-title text-light py-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary bg-gradient">
                    <i class="bi bi-plus-circle"></i>  Create New Category
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td align="center"><h5><b>Category Name</b></h5></td>
                    <td align="center"><h5><b>Display Order</b></h5></td>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                {
                    <tr>
                        <td align="center">@obj.Name</td>
                        <td align="center">@obj.DisplayOrder</td>
                        <td align="center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-1">
                                    <i class="bi bi-pencil-square"></i> EDIT
                                </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-1">
                                    <i class="bi bi-trash-fill"></i> DELETE
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>